<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Indigo_nav_color">
    <ImageButton
        android:id="@+id/bt_back"
        android:layout_gravity="center"
        android:background="@drawable/ic_action_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="添加人脸" />
    <Button
        android:background="@color/Indigo_nav_color"
        android:id="@+id/bt_submit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="提交"
        android:layout_gravity="center"
        android:gravity="center" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="成员"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/et_input_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="请输入成员"
            android:layout_weight="3"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="添加照片"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    android:layout_height="" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <com.thinkjoy.zhthinkjoyfacedetect.SameSizeImageView
            android:id="@+id/iv_member_photo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_action_input_image"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <com.thinkjoy.zhthinkjoyfacedetect.SameSizeImageView
            android:id="@+id/iv_member_photo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_action_input_image"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:text="(请上传两张清晰正脸照片)"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>